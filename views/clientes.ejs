<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes Registrados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Asegúrate de ajustar la ruta según la ubicación de tu archivo CSS -->
</head>
<body id="body-clientes">
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-md">
          <a class="navbar-brand" href="/">
            <img src="/img/logo-france.png" alt="Logo" />
          </a>
  
          <button
            class="navbar-toggler hamburguesa"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
  
          <div class="container-fluid">
            <div
              class="collapse navbar-collapse justify-content-end"
              id="navbarNav"
            >
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/ma-cuisine">Ma Cuisine</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/menu">Menu</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/contacto">Contacto</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Registro/Ingreso</a>
                </li>
                <li class="nav-item" id="reservas-link" style="display: none;">
                  <a class="nav-link" href="/reservas">Reservas</a>
                </li>
                <li class="nav-item" id="clientes-link" style="display: none;">
                  <a class="nav-link" href="/clientes">Clientes</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
    </header>

    <div class="container mt-4 text-light">
        <!-- Título -->
        <h1>Clientes Registrados</h1>
        
        <!-- Buscar cliente por ID -->
        <div class="mb-3">
            <input type="text" id="buscar-cliente-id" placeholder="Buscar cliente por ID" class="form-control">
            <button id="buscar-cliente-btn" class="btn">Buscar</button>
        </div>
        
        <!-- Tabla de clientes -->
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Dirección</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="clientes">
              <!--la version de la linea de abajo sin arrow function sino con function function(cliente) no funciono-->
              <% clientes.forEach(cliente => { %>
                <tr>
                    <td><%= cliente.id %></td>
                    <td><%= cliente.nombre %></td>
                    <td><%= cliente.edad %></td>
                    <td><%= cliente.direccion %></td>
                    <td>
                      <button class="btn btn-warning btn-sm" onclick="editarCliente($,{cliente,id})">Editar</button>
                      <button class="btn btn-danger btn-sm" onclick="eliminarCliente($,{cliente,id})">Eliminar</button>
                    </td>
                </tr>
                
            <% }); %>
                <!-- Aquí se insertarán los clientes dinámicamente -->
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <nav class="navbar navbar-expand-md">
          <div class="container-fluid justify-content-center">
            <ul class="d-flex justify-content-evenly nav">
              <li class="nav-item footer">
                <a class="nav-link" href="/contacto">Contáctenos</a>
              </li>
              <li class="nav-item footer">
                <a class="nav-link" href="/">MA CUISINE Prensa</a>
              </li>
              <li class="nav-item footer">
                <a class="nav-link footer" href="/">Diseño por CAnton</a>
              </li>
              <li class="nav-item">
                <a class="nav-link footer" href="/">Términos y condiciones</a>
              </li>
              <li class="nav-item">
                <a class="nav-link footer" href="/">Políticas de privacidad</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contacto">E-mail: contact@macuisine.com</a>
              </li>
            </ul>
          </div>
        </nav>
    </footer>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="../public/js/clientes.js"></script> 
    <script>

      const user = {
        isAdmin: true // Cambia esto según el rol del usuario
      };

      // Verificar si el usuario es administrador y mostrar los enlaces de Usuarios y Clientes
      if (user && user.isAdmin) {
        const reservasLink = document.getElementById('reservas-link');
        const clientesLink = document.getElementById('clientes-link');
        if (reservasLink) {
          reservasLink.style.display = 'block'; // Mostrar el enlace de Usuarios
        }
        if (clientesLink) {
          clientesLink.style.display = 'block'; // Mostrar el enlace de Clientes
        }
      }
    </script>
     
</body>
</html>